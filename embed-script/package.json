{
  "name": "@niravcodes/call-widget",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/c2c-widget.umd.js",
  "module": "./dist/c2c-widget.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/c2c-widget.es.js",
      "require": "./dist/c2c-widget.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "pushToCDN": "npm run build && cd ../embed-script && scp dist/widget.js swrooms:/root/cdn/c2c-widget.js",
    "preview": "vite preview",
    "serve": "vite preview --host",
    "push": "npm run build && npm run pushToCDN && npm run pushToCDN:dev",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "sass": "^1.86.0",
    "terser": "^5.39.0",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "@types/react": "^18.0.0"
  },
  "dependencies": {
    "@signalwire/js": "dev",
    "tslib": "^2.8.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  }
}
